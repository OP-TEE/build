/dts-v1/;

/ {
	compatible = "arm,ffa-core-manifest-1.0";
	#address-cells = <2>;
	#size-cells = <1>;

	attribute {
		spmc_id = <0x8000>;
		maj_ver = <0x1>;
		min_ver = <0x0>;
		exec_state = <0x0>;
		load_address = <0x0 0xe100000>;
		entrypoint = <0x0 0xe100000>;
		binary_size = <0x80000>;
	};

	cpus {
		#address-cells = <0x02>;
		#size-cells = <0x00>;

		cpu@0 {
			device_type = "cpu";
			reg = <0x0 0x0>;
		};

		cpu@3 {
			device_type = "cpu";
			reg = <0x0 0x3>;
		};

		cpu@2 {
			device_type = "cpu";
			reg = <0x0 0x2>;
		};

		cpu@1 {
			device_type = "cpu";
			reg = <0x0 0x1>;
		};
	};

	/* VIRT_SECURE_MEM */
	memory@e000000 {
		device_type = "memory";
		reg = <0x0 0xe000000 0x1000000>;
	};
};
